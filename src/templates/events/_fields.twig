{% import "_includes/forms" as forms %}

<div id="fields">

    {% if not eventType.titleFormat %}
        {{ forms.textField({
            first: true,
            label: "Title" | t('commerce'),
            site: event.site,
            id: 'title',
            name: 'title',
            value: event.title,
            placeholder: 'Enter title' | t('commerce'),
            errors: event.getErrors('title'),
            first: true,
            autofocus: true,
            required: true,
            maxlength: 255
        }) }}
    {% endif %}

    <div>
        <div id="tabEventData">
            {% include "eventsky/events/_tabEventData" %}
        </div>
        <div id="tabTickets" class="hidden">
            {% include "eventsky/events/_tabTickets" %}
        </div>

        <div id="fields__inner">
            {% include "eventsky/events/_tabsCustom" %}
        </div>
    </div>
</div>
