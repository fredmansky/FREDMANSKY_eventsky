{% apply spaceless %}
    <ul>
        <li class="heading"><span>{{ 'translate.events.tickets.statusHeadline' | t('eventsky') }}</span></li>

        {% for status in ticketStatuses %}
            <li>
                <a data-status-id="{{ status.id }}"
                   data-event-id="{{ event.id }}"
                   {% if selectedStatus.id == status.id %}class="sel"{% endif %}>

                    <span class="label">{{ status.name }}</span>
                    {% set number = status.getTicketCountForEvent(event.id) %}
                    {% if number > 0 %}
                        <span class="badge">{{ number | number(decimals=0) }}</span>
                    {% endif %}
                </a>
            </li>
        {% endfor %}

    </ul>
{% endapply %}
